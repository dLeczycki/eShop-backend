{
  "compilerOptions": {
		"noImplicitAny": true, //wymuszenie dodawania typu
		"preserveConstEnums": true, //Enumy zostają w JS a nie w TS
		"sourceMap": true, //Pokazuje co w JS jest czym w TS, ułatwia debugowanie
		"target": "es6", //docelowa wersja JS
		"downlevelIteration": true, //współpraca z nowymi pętlami np. for const x of xyz
    "esModuleInterop": true,
    "module": "CommonJS",
		"lib": ["es6"], //wspierane biblioteki
		"outDir": "dist" // miejsce gdzie transpiluje się TS
  }
}
